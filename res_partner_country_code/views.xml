<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="view_partner_simple_form_country_code" model="ir.ui.view">
            <field name="name">res.partner.simplified.form.country.code</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_simple_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="after">
                    <field
                        name="country_id"
                        placeholder="Country"
                        class="oe_no_button"
                        options='{"no_open": True, "no_create": True}'
                    />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
